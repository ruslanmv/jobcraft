# --- General ---
ENV=dev
DEFAULT_PROVIDER=ollabridge
DEFAULT_COUNTRIES=IT,DE,GB,CH
DEFAULT_LOCALE=en-GB
DEFAULT_TIMEZONE=Europe/Rome

# --- OllaBridge (RECOMMENDED: your PC) ---
# Start OllaBridge on your PC:
#   ollabridge start
# Then set:
OLLABRIDGE_BASE_URL=http://localhost:11435
OLLABRIDGE_API_KEY=
OLLABRIDGE_MODEL=deepseek-r1

# --- Database ---
# If empty, uses sqlite under ~/.jobcraft/jobcraft.sqlite
DATABASE_URL=

# --- OpenAI ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# --- Anthropic ---
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# --- Gemini ---
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-pro

# --- watsonx ---
WATSONX_API_KEY=
WATSONX_URL=
WATSONX_PROJECT_ID=
WATSONX_MODEL_ID=ibm/granite-20b-code-instruct

# --- Direct Ollama (optional fallback) ---
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1

# --- Email (optional) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
